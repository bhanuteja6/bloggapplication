<p id="notice"><%= notice %></p>
<p>
	<b>Name:</b>
	<%= @post.name %>
</p>
<p>
	<b>Title:</b>
	<%= @post.title %>
</p>
<p>
	<b>Content:</b>
	<%= @post.content %>
</p>
<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
	<div class="field">
		<%= f.label :commenter %><br />
		<%= f.text_field :commenter %><br />
	</div>
	<div class="field">
		<%= f.label :body %><br />
		<%= f.text_field :body %><br />
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
<%= link_to 'Edit Post', edit_post_path(@post) %> |
<%= link_to 'Back to Post', posts_path %> |
